{
  "compilerOptions": {
    "strict": true,
    "allowUnreachableCode": false,
    "declaration": true,
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es2017",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "jsx": "react",
    "jsxFactory": "h",
    "allowJs": false
  },
  "include": ["lib"],
  "exclude": ["node_modules"]
}
